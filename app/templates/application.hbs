<div class="container-fluid">
  <h1 id="title">Welcome to Ember.js</h1>
  <div class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <LinkTo @route="application" class="navbar-brand">
          Bloggr
        </LinkTo>
      </div>
      <div class="navbar-inner">
        <ul class="nav navbar-nav">
          <ActiveLink>
            <LinkTo @route="posts">
              Posts
            </LinkTo>
          </ActiveLink>
          <ActiveLink>
            <LinkTo @route="authors">
              Authors
            </LinkTo>
          </ActiveLink>
          <ActiveLink>
            <LinkTo @route="about">
              About
            </LinkTo>
          </ActiveLink>
          <ActiveLink>
            <LinkTo @route="secret">
              Secret
            </LinkTo>
          </ActiveLink>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="push {{if cloudState.cloudPull "push-enabled"}}" title="Pull data">
            <p class="navbar-btn">
              <i aria-hidden class="fa fa-2x fa-cloud-download"></i>
            </p>
            <p class="navbar-text">
              Pull {{if cloudState.cloudPull "synced" "not synced"}}
            </p>
          </li>
          <li class="push {{if cloudState.cloudPush "push-enabled"}}" title="Push data">
            <p class="navbar-btn">
              <i aria-hidden class="fa fa-2x fa-cloud-upload"></i>
            </p>
            <p class="navbar-text">
              Push {{if cloudState.cloudPush "synced" "not synced"}}
            </p>
          </li>
          {{#if session.isAuthenticated}}
            <li>
              <a href="#" {{action "logout"}}>Logout</a>
            </li>
          {{else}}
            <ActiveLink>
              <LinkTo @route="login">
                Login
              </LinkTo>
            </ActiveLink>
          {{/if}}
          <li>
            <p class="navbar-btn spinner">
              <RefreshIndicator @spin={{isSpinning}} />
            </p>
          </li>
        </ul>
      </div>
    </div>
  </div>
  {{outlet}}
</div>